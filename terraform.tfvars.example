# ==================== General Configuration ====================
project_name      = "multicloud-infra"
environment       = "dev"
owner_email       = "your.email@example.com"
enable_monitoring = true
alert_email       = "alerts@example.com"

# ==================== AWS Configuration ====================
aws_region         = "eu-west-1"
aws_vpc_cidr       = "10.0.0.0/16"
aws_instance_type  = "t3.medium"
aws_node_count     = 3

aws_availability_zones = [
  "eu-west-1a",
  "eu-west-1b",
  "eu-west-1c"
]

aws_public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]

aws_private_subnet_cidrs = [
  "10.0.11.0/24",
  "10.0.12.0/24",
  "10.0.13.0/24"
]

# AWS Database
aws_db_name             = "appdb"
aws_db_username         = "dbadmin"
aws_db_instance_class   = "db.t3.medium"
aws_db_allocated_storage = 100
aws_db_multi_az         = true

# ==================== Azure Configuration ====================
azure_location = "West Europe"

azure_vnet_address_space = [
  "10.1.0.0/16"
]

azure_subnet_prefixes = [
  "10.1.1.0/24",
  "10.1.2.0/24",
  "10.1.3.0/24"
]

azure_vm_size   = "Standard_B2s"
azure_node_count = 3

# Azure Database
azure_db_name     = "appdb"
azure_db_username = "sqladmin"
azure_db_sku      = "S0"

# ==================== GCP Configuration ====================
gcp_project_id   = "your-gcp-project-id"
gcp_region       = "europe-west1"
gcp_subnet_cidr  = "10.2.0.0/24"
gcp_machine_type = "e2-medium"
gcp_node_count   = 3

# GCP Database
gcp_db_name    = "appdb"
gcp_db_version = "POSTGRES_14"
gcp_db_tier    = "db-f1-micro"

# ==================== Monitoring Configuration ====================
grafana_admin_password    = "ChangeMe123!"  # CHANGE THIS!
prometheus_retention_days = 15

# ==================== Common Tags ====================
common_tags = {
  Terraform   = "true"
  Project     = "MultiCloud Infrastructure"
  ManagedBy   = "Terraform"
  Team        = "DevOps"
  CostCenter  = "Engineering"
}

# ==================== NOTES ====================
# 1. Copy this file to terraform.tfvars and update with your values
# 2. NEVER commit terraform.tfvars to version control
# 3. Store sensitive values in a secure secret manager (Vault, AWS Secrets Manager, etc.)
# 4. For production, use separate tfvars files: production.tfvars, staging.tfvars
# 5. Make sure to configure your cloud provider credentials before running terraform:
#    - AWS: Configure AWS CLI or set AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY
#    - Azure: Run 'az login'
#    - GCP: Set GOOGLE_APPLICATION_CREDENTIALS environment variable